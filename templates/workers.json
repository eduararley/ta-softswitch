{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "metadata": {
        "author": "Eduar Cardona",
        "comments": "Deploy into Workers resource group"
    },
    "parameters": {
        "siteName": {
            "type": "string",
            "defaultValue": "ta-softsw",
            "metadata": {
                "description": "General name of the deployment"
            }
        },
        "sku": {
            "type": "string",
            "allowedValues": [
                "Free",
                "Shared",
                "Basic",
                "Standard"
            ],
            "defaultValue": "Free",
            "metadata": {
                "description": "Package size"
            }
        },
        "deployPrefix": {
            "type": "string",
            "metadata": {
                "description": "Prefix for all Resource groups"
            }
        },
        "deployPass": {
            "type": "string",
            "metadata": {
                "description": "Password for all related components"
            }
        },
        "deployScript": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/eduararley/ta-softswitch/master/scripts/deploy.sh",
            "metadata": {
                "description": "Script to finish the deployment from VM"
            }
        },
        "addressPrefix": {
            "type": "string",
            "defaultValue": "10.191.31.0/24",
            "metadata": {
                "description": "Address segment for the deployment"
            }
        },
        "addressType": {
            "type": "string",
            "defaultValue": "Static",
            "metadata": {
                "description": "Type of IP address"
            }
        },
        "nodes": {
            "type": "int",
            "metadata": {
                "description": "Number of VoIP nodes to be deployed"
            }
        }
    },
    "variables": {
        "dbVersion": "10.2",
        "dbSku": {
            "name": "GP_Gen5_2",
            "tier": "GeneralPurpose",
            "capacity": 2,
            "family": "Gen5",
            "size": 5120,
            "backupDays": 7
        },
        "vmSku": {
            "size": "Standard_B1s",
            "disk": "Premium_LRS",
            "mb": 31
        },
        "webSku": {
            "name": "F1",
            "tier": "Free"
        }
    },
    "resources": [
        {
            "apiVersion": "2019-04-01",
            "name": "swVirtNet",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('addressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "subNet",
                        "properties": {
                            "addressPrefix": "[parameters('addressPrefix')]",
                            "serviceEndpoints": [
                                {
                                    "service": "Microsoft.Sql",
                                    "locations": [
                                        "[resourceGroup().location]"
                                    ]
                                },
                                {
                                    "service": "Microsoft.KeyVault",
                                    "locations": [
                                        "[resourceGroup().location]"
                                    ]
                                }
                            ]
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2018-10-01",
            "name": "[concat('swVmNetInterface0', copyIndex(1))]",
            "type": "Microsoft.Network/networkInterfaces",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "swVirtNet"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', 'swVirtNet'), '/subnets/', 'subNet')]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIpAddress": {}
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId(concat(parameters('deployPrefix'), 'Network'), 'Microsoft.Network/networkSecurityGroups', 'swNetSecGroup')]"
                }
            },
            "copy": {
                "name": "netCopy",
                "count": "[parameters('nodes')]"
            }
        },
        {
            "apiVersion": "2018-06-01",
            "name": "swDatabase",
            "type": "Microsoft.DBforMariaDB/servers",
            "location": "[resourceGroup().location]",
            "properties": {
                "version": "[variables('dbVersion')]",
                "administratorLogin": "[concat(parameters('siteName'), '-admin')]",
                "administratorLoginPassword": "[parameters('deployPass')]",
                "createMode": "Default",
                "storageProfile": {
                    "storageMB": "[variables('dbSku').size]",
                    "backupRetentionDays": "[variables('dbSku').backupDays]",
                    "geoRedundantBackup": "Disabled"
                }
            },
            "sku": {
                "name": "[variables('dbSku').name]",
                "tier": "[variables('dbSku').tier]",
                "size": "[variables('dbSku').size]",
                "family": "[variables('dbSku').family]",
                "capacity": "[variables('dbSku').capacity]"
            },
            "resources": [
                {
                    "apiVersion": "2018-06-01",
                    "name": "allowFromVnet",
                    "type": "virtualNetworkRules",
                    "dependsOn": [
                        "swDatabase",
                        "swVirtNet"
                    ],
                    "properties": {
                        "virtualNetworkSubnetId": "[concat(resourceId('Microsoft.Network/virtualNetworks', 'swVirtNet'), '/subnets/', 'subNet')]",
                        "ignoreMissingVnetServiceEndpoint": true
                    }
                }
            ]
        },
        {
            "apiVersion": "2016-09-01",
            "name": "swAppServer",
            "type": "Microsoft.Web/serverfarms",
            "location": "[resourceGroup().location]",
            "kind": "linux",
            "properties": {
                "reserved": true
            },
            "sku": {
                "name": "[variables('webSku').name]",
                "tier": "[variables('webSku').tier]"
            }
        },
        {
            "apiVersion": "2016-08-01",
            "name": "ta-swWebApp",
            "type": "Microsoft.Web/sites",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "swAppServer"
            ],
            "properties": {
                "name": "ta-swWebApp",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms/', 'swAppServer')]",
                "siteConfig": {
                    "linuxFxVersion": "PHP|7.3",
                    "scmType": "LocalGit"
                }
            }
        },
        {
            "apiVersion": "2019-03-01",
            "name": "[concat('swSipVm-0', copyIndex(1))]",
            "type": "Microsoft.Compute/virtualMachines",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('swVmNetInterface0', copyIndex(1))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('vmSku').size]"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "[variables('vmSku').disk]"
                        },
                        "diskSizeGB": "[variables('vmSku').mb]"
                    },
                    "imageReference": {
                        "publisher": "OpenLogic",
                        "offer": "CentOS",
                        "sku": "7.7",
                        "version": "latest"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat('swVmNetInterface0', copyIndex(1)))]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[concat('swSipVm-0', copyIndex(1))]",
                    "adminUsername": "[concat(parameters('siteName'), '-admin')]",
                    "adminPassword": "[parameters('deployPass')]"
                }
            },
            "identity": {
                "type": "SystemAssigned"
            },
            "zones": [
                "1"
            ],
            "copy": {
                "name": "vmCopy",
                "count": "[parameters('nodes')]"
            },
            "resources": [
                {
                    "apiVersion": "2019-03-01",
                    "name": "deployment",
                    "type": "extensions",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[concat('swSipVm-0', copyIndex(1))]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Azure.Extensions",
                        "type": "CustomScript",
                        "typeHandlerVersion": "2.0",
                        "settings": {},
                        "protectedSettings": {
                            "commandToExecute": "whoami"
                        }
                    },
                    "metadata": {
                        "protectedSettings_commandToExecute": "[concat('curl -Lo /usr/local/src/deploy.sh ', parameters('deployScript'), ' && sh /usr/local/src/deploy.sh')]"
                    }
                }
            ]
        },
        {
            "apiVersion": "2017-09-01",
            "name": "[guid(resourceGroup().id, string(copyIndex(1)))]",
            "type": "Microsoft.Authorization/roleAssignments",
            "dependsOn": [
                "[concat('swSipVm-0', copyIndex(1))]"
            ],
            "properties": {
                "roleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', 'acdd72a7-3385-48ef-bd42-f606fba81ae7')]",
                "principalId": "[reference(resourceId('Microsoft.Compute/virtualMachines', concat('swSipVm-0', copyIndex(1))), '2019-03-01', 'Full').identity.principalId]",
                "scope": "[resourceGroup().id]"
            },
            "copy": {
                "name": "roleCopy",
                "count": "[parameters('nodes')]"
            }
        },
        {
            "apiVersion": "2016-10-01",
            "name": "ta-swKeyVault",
            "type": "Microsoft.KeyVault/vaults",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "swVirtNet",
                "vmCopy"
            ],
            "properties": {
                "enabledForDeployment": true,
                "enabledForTemplateDeployment": true,
                "tenantId": "[subscription().tenantId]",
                "sku": {
                    "name": "standard",
                    "family": "A"
                },
                "copy": [
                    {
                        "name": "accessPolicies",
                        "count": "[parameters('nodes')]",
                        "input": {
                            "tenantId": "[subscription().tenantId]",
                            "objectId": "[reference(resourceId('Microsoft.Compute/virtualMachines', concat('swSipVm-0', copyIndex('accessPolicies', 1))), '2019-03-01', 'Full').identity.principalId]",
                            "permissions": {
                                "keys": [],
                                "secrets": [
                                    "list",
                                    "get"
                                ],
                                "certificates": []
                            }    
                        }
                    }
                ],
                "networkAcls": {
                    "defaultAction": "Deny",
                    "bypass": "AzureServices",
                    "ipRules": [],
                    "virtualNetworkRules": [
                        {
                            "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'swVirtNet', 'subNet')]",
                            "ignoreMissingVnetServiceEndpoint": false
                        }
                    ]
                }
            },
            "resources": [
                {
                    "apiVersion": "2016-10-01",
                    "name": "[concat(parameters('siteName'), '-admin')]",
                    "type": "secrets",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "ta-swKeyVault"
                    ],
                    "properties": {
                        "value": "[parameters('deployPass')]"
                    }
                }
            ]
        }
    ],
    "outputs": {
        "DbServerName": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.DBforMariaDB/servers', 'swDatabase')).fullyQualifiedDomainName]"
        },
        "DbUser": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.DBforMariaDB/servers', 'swDatabase')).administratorLogin]"
        },
        "webUrl": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Web/sites', 'ta-swWebApp')).defaultHostName]"
        }
    }
}